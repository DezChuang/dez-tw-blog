<% include ../partials/header %>

    <div class="row">
        <div class="col-md-3">
            <p class="lead">Dez.tw</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= post.image%>">
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a><%= post.title%></a></h4>
                    <p><%= post.description%></p>
                    <p>
                        <em>Submitted by <%= post.author.username%></em>
                    </p>
                    <% if(currentUser && post.author.id.equals(currentUser._id)) {%>
                        <a class="btn btn-warning" href="/posts/<%= post._id%>/edit">Edit</a>
                        <form id="delete-form" action="/posts/<%= post._id%>?_method=DELETE" method="POST">
                            <input type="submit" class="btn btn-danger" value="Delete">
                        </form>
                    <% }%>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/posts/<%= post._id%>/comments/new">Add new comment</a>
                </div>
                <hr>
                <% post.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username%></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text%>
                            </p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)) {%>
                                <a class="btn btn-xs btn-warning" href="/posts/<%= post._id%>/comments/<%= comment._id%>/edit">Edit</a>
                                <form id="delete-form" action="/posts/<%= post._id%>/comments/<%= comment._id%>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                                </form>
                            <% }%>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

<% include ../partials/footer %>
